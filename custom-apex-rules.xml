<?xml version="1.0"?>
<ruleset name="Custom Apex Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
                             http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Custom Apex rules for catching duplicates and style issues</description>

    <!-- Built-in rules -->
    <rule ref="rulesets/apex/design.xml"/>
    <rule ref="rulesets/apex/security.xml"/>
    <rule ref="rulesets/apex/bestpractices.xml"/>
    
    <!-- Detect duplicate fields/constants -->
    <rule ref="rulesets/apex/unusedcode.xml">
        <exclude name="UnusedLocalVariable"/>
    </rule>

    <!-- Detect code with inconsistent indentation -->
    <rule ref="rulesets/apex/formatting.xml"/>
</ruleset>
